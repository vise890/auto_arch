{
  "variables": {
    "iso_ckecksum": "d2e363756c91c2e0f3eed26e8cfba023a0711a8b",
    "iso_checksum_type": "sha1",

    "iso_url": "http://mirror.bytemark.co.uk/archlinux/iso/2016.12.01/archlinux-2016.12.01-dual.iso",

    "default_user": "renegade",
    "default_password": "renegade"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "headless": false,

      "iso_interface": "sata",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--firmware", "efi"]
      ],

      "iso_checksum": "{{user `iso_ckecksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",

      "guest_os_type": "ArchLinux_64",
      "guest_additions_mode": "disable",

      "http_directory": ".",

      "boot_wait": "2s",
      "boot_command": [
        "<enter><wait10><wait10><wait10>",
        "cd / <enter>",
        "curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/auto_arch.tar.gz <enter>",
        "tar -zxf auto_arch.tar.gz && rm auto_arch.tar.gz <enter>",
        "cd auto_arch <enter>",
        "bash 1_prepare_disk.sh <enter>",
        "bash 2_bootstrap.sh <enter>"
      ],

      "ssh_username": "{{user `default_user` }}",
      "ssh_password": "{{user `default_password`}}",
      "ssh_timeout": "10m",

      "shutdown_command": "shutdown now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{user `default_password`}}' | sudo --stdin sh '{{ .Path }}'",
      "scripts": [
        "./post-install/virtualbox-guest-utils.sh",
        "./post-install/vagrant.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "renegade_arch.box"
    }
  ]
}
